mixin home()
  //- 首页 mixin
  //- page.prev_link, 上一页的网址
  //- page.next_link, 下一页的网址
  - var prev = page.prev_link
  - var next = page.next_link
  .paginator
    if page.prev
      a.prev(href=url_for(prev))!= "<<&emsp;"+__('prev') 
    if page.next
      a.next(href=url_for(next))!= __('next')+"&emsp;>>"

mixin post()
  //- 页面/文章 mixin
  //- page.prev, 上一个页面，若无则为 null
  //- page.next, 下一个页面，若无则为 null
  - var prev = page.prev ? page.prev.path : false;
  - var next = page.next ? page.next.path : false; 
  .paginator
    if prev
      a.prev(href=url_for(prev))!= "<<&emsp;"+__('prev_post')
    if next
      a.next(href=url_for(next))!= __('next_post')+"&emsp;>>"
